extends layout/index


block meta
  title #{user.name} &middot; Framesia
  meta(name="description" content="#{user.name} &middot; #{user.description}")

block content
  .i-wrap--full
    .i-wrap__right
      .js-colright
        .b-graf--sc.is-center #{__('Contributed in')}
        .js-colright-feed.is-empty(data-username="#{user.username}" data-col-contr='true')
        .js-colright-spinner.spinner
          .bar1
          .bar2
          .bar3
      .js-colright
        .b-graf--sc.is-center #{__('Following collections')}
        .js-colright-feed.is-empty(data-username="#{user.username}" data-col-follow='true')
        .js-colright-spinner.spinner
          .bar1
          .bar2
          .bar3
      .divider
      .js-trenda
        .b-graf--sc.is-center #{__('Loved articles')}
        .js-trenda-feed.is-empty(data-username="#{user.username}")
        .js-trenda-spinner.spinner
          .bar1
          .bar2
          .bar3
        a.i-button.is-center(href="/u/#{user.username}/loved-articles") #{__('More')}

      .divider
      include ./blocks/footer-menu.jade
    .i-wrap__left
      .b-profile.i-wrap--640.is-center
        .b-profile__left
          img.b-profile__ava(src="#{IMG_URL}ava/#{user._id}.jpg" alt="#{user.name} Framesia")
        .b-profile__right
          h1.b-profile__name #{user.name}
          p.b-profile__desc #{user.description}
          span.b-profile__username @#{user.username}
          a(href="http://www.facebook.com/#{ user.facebook_id }" target="_blank")
