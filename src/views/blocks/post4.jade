include ../util/time.jade
include ../util/read.jade

each item in post
  a(href="/p/#{item.slug}" data-published-at="#{item.published_at}")
    .b-post__repost--half
      if item.is_cover == true
        .is-half.img
          img(src="#{IMG_URL}/v#{Math.floor(new Date(item.edited_at) / 1000) || 1}/post/#{item._id}-cover.jpg")
      .is-half
        .b-post__repost__content
          h3.b-post__title !{item.title}
          p.b-post__subtitle !{item.subtitle}
          p.i-user--inline.i-user--inline__mod #{__('By')}  
            a(href="/u/#{item.user.username}")
              span.text-red #{item.user.name}
            span(style="margin:5px") &middot;
            b #{item.love_count || 0} 
              span.text-red &#9825;
      .clear
    .clear


