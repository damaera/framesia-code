doctype html
html
  head
    style.
      html, body {
        background: #fff;
        margin: 0;
        padding: 0;
      }
  body
    div#fb-root
    script.
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&version=v2.3";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    div.fb-post(
      data-width="640"
    )
    script.
      var user = window.location.search.split('user=')[1].split('+')[0]
      var postId = window.location.search.split('id=')[1].split('+')[0]
      document.querySelector('.fb-post').setAttribute('data-href', "//www.facebook.com/" + user + "/posts/" + postId)
    script(src="#{ASSET_URL}js/iframeResizer.contentWindow.min.js")
